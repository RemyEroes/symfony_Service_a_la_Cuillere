{% block recipe_list %}


<div class="grid grid-cols-2 md:grid-cols-5 gap-1.5">

    {% for recipe in recipes %}


    <a href="{{ path('recipe_show', {'slug': recipe.slug, 'id': recipe.id}) }}">
        <div class="w-full h-48 bg-slate-500">
            <div class="mr-auto ml-auto w-11/12 h-28 bg-slate-900">
                <img src="{{ recipe.image }}" alt="{{ recipe.name }}"  class="w-full h-full">
            </div>
            <div class="h-10 mt-2">
                <h2 class="ml-3 text-white">{{ recipe.name| }}</h2>
            </div>

        </div>
    </a>
    
    {% endfor %}

</div>


{% endblock %}
